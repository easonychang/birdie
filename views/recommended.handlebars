	<div class="container-fluid" align="center">
        <div class="cardcontainer wrap">
            <div id="tinderslide">
                <ul id="myul">
                
                    {{#each restaurant}}
                    <li>
                        <div class="col-5 card text-center" style="background-color: #ebebeb">
                            <img class="card-img-top" src="{{image_url}}" alt="Restaurant">
                            <div class="card-body">
                                <h4 class="card-title text-center">{{name}}</h4>
                                <p class="card-text text-center">
                                    {{categories}} <br>
                                </p>
                                <div class="text-center">
                                    <img src="{{rating_img}}">
                                    <p>{{review_count}} Reviews </p> 
                                    <img class = "yelplogo" src="/images/YelpLogo_Trademark/Screen/Yelp_trademark_RGB.png">
                                </div>
                                <div class ="like"></div>
                                <div class ="dislike"></div>
                                
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    <div class="card">
        <div class="actions">
            <a href="/home" class="dislike">
